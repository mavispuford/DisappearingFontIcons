<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DisappearingFontIcons.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DisappearingFontIcons"
    Shell.FlyoutBehavior="Disabled"
    Title="DisappearingFontIcons">

    <TabBar Shell.TabBarUnselectedColor="{StaticResource Secondary}">
        <Tab Title="MainPage1"
             Route="MainPageTab1">
            <Tab.Icon>
                <FontImageSource Glyph="&#xef42;" FontFamily="MaterialIconsRound400" />
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="MainPage2"
             Route="MainPageTab2">
            <Tab.Icon>
                <FontImageSource Glyph="&#xe3f4;" FontFamily="MaterialIconsRound400" />
            </Tab.Icon>
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
    </TabBar>

</Shell>
